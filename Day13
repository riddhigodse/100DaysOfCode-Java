1.//Problem Statement
 //Print The Name By Using Function .
import java.util.Scanner;
public class Day13 {

    public static void  printMyName(String tanuja) {
        System.out.println(tanuja);
        return ;
        
    }
    public static void main(String args[]){
        Scanner sc = new Scanner (System.in);
        String tanuja =sc.next();
        printMyName(tanuja); // function call
    }
}


2.//Problem Statement
// make the function to sum of two numbers
 import java.util.Scanner;
 public class Day13 {
     public static int  CalculateSum(int a, int b) {
         int sum = a + b;
         return sum;
     }

     public static void main(String args[]) {
         Scanner sc = new Scanner(System.in);
         int a = sc.nextInt();
         int b = sc.nextInt();
         int sum =CalculateSum(a,b);

         System.out.println(sum);
     }
 } 

